<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    tools:context=".EnterPrevDiveNum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/enter_prev_dive_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="Enter the number of dives."
            android:textColor="@color/seablue"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/prev_dive_number"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@color/white"
            android:textColor="@color/seablue"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableLayout
            android:id="@+id/numbers_tableLayout"

            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_height="match_parent">

            <TableRow android:layout_weight="1">
                <Button
                    android:id="@+id/btn_num1"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="1"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue" />

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num2"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="2"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num3"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="3"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/seablue"
                android:layout_height="1dp" />

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/btn_num4"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="4"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num5"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="5"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num6"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="6"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/seablue"
                android:layout_height="1dp" />

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/btn_num7"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="7"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num8"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="8"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num9"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="9"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/seablue"
                android:layout_height="1dp" />

            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_Clear"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="C"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_num0"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="0"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>

                <view class="android.widget.TableLayout"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/seablue">
                </view>

                <Button
                    android:id="@+id/btn_OK"
                    android:onClick="numBtnClickListener"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="OK"
                    android:textSize="30dp"
                    android:background="@color/white"
                    android:textColor="@color/seablue"/>
            </TableRow>

        </TableLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>