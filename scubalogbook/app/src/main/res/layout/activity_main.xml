<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/subtitle1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="로그북 관리"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/new_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/malgun"
                android:text="로그북 작성"
                android:textSize="18sp"
                android:backgroundTint="#9C27B0" />

            <Button
                android:fontFamily="@font/malgun"
                android:id="@+id/view_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="로그북 열람"
                android:textSize="18sp"
                app:backgroundTint="#288A32" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="편의 기능"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:orientation="horizontal">

                <Button
                    android:fontFamily="@font/malgun"
                    android:onClick="gocafeButtonClicked"
                    android:id="@+id/go_cafe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="스쿠버 카페"
                    android:textSize="18sp"
                    android:backgroundTint="#9C27B0"/>

                <Button
                    android:fontFamily="@font/malgun"
                    android:onClick="gopongdangButtonClicked"
                    android:id="@+id/go_pongdang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="퐁당닷컴"
                    android:textSize="18sp"
                    app:backgroundTint="#288A32" />
            </LinearLayout>

            <TextView
                android:id="@+id/subtitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="긴급"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:fontFamily="@font/malgun"
                    android:onClick="call_coast_guard"
                    android:id="@+id/button10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="해경"
                    android:textSize="24sp"
                    android:backgroundTint="#9C27B0"/>

                <Button
                    android:fontFamily="@font/malgun"
                    android:onClick="call_119"
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="119"
                    android:backgroundTint="#2196F3"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgun"
                    android:onClick="call_team_leader"
                    android:text="팀장"
                    android:textSize="24sp"
                    android:backgroundTint="#8BC34A" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>